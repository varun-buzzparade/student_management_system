@model StudentManagementSystem.ViewModels.StudentRegistrationViewModel

@{
    ViewData["Title"] = "Student Registration";
}

<link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />

<h2>Student Registration</h2>

<form asp-action="Register" method="post" class="mt-3" enctype="multipart/form-data" id="registerForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label" for="reg_FullName">Full Name</label>
        <input asp-for="FullName" class="form-control" id="reg_FullName" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="reg_DateOfBirth">Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" id="reg_DateOfBirth" min="1900-01-01" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="reg_HeightCm">Height (cm)</label>
        <input asp-for="HeightCm" class="form-control" id="reg_HeightCm" />
        <span asp-validation-for="HeightCm" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="reg_Gender">Gender</label>
        <select asp-for="Gender" class="form-select" id="reg_Gender" asp-items="Html.GetEnumSelectList<StudentManagementSystem.Models.Gender>()"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="reg_MobileNumber">Mobile Number</label>
        <input asp-for="MobileNumber" class="form-control" id="reg_MobileNumber" />
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="reg_Email">Email Address</label>
        <input asp-for="Email" class="form-control" id="reg_Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <input asp-for="DraftId" type="hidden" id="reg_DraftId" />

    <div class="mb-3">
        <label class="form-label" for="reg_ProfileImage">Profile Image</label>
        <input asp-for="ProfileImage" type="file" class="form-control" id="reg_ProfileImage" accept=".jpeg,.jpg,.png" />
        <span id="reg_ProfileImage_uploaded" class="text-success small d-block mt-1"></span>
        <small class="form-text text-muted">Optional. Max 5 MB. JPEG, JPG, PNG only.</small>
        <span id="reg_ProfileImage_error" class="text-danger d-block"></span>
        <div id="reg_ProfileImage_progress" class="progress mt-1 d-none" style="height: 6px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
        </div>
        <span asp-validation-for="ProfileImage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="reg_ProfileVideo">Profile Video</label>
        <input asp-for="ProfileVideo" type="file" class="form-control" id="reg_ProfileVideo" accept=".mp4,.mov,.mkv,.avi,.wmv" />
        <span id="reg_ProfileVideo_uploaded" class="text-success small d-block mt-1"></span>
        <small class="form-text text-muted">Optional. Max 100 MB. MP4, MOV, MKV, AVI, WMV only.</small>
        <span id="reg_ProfileVideo_error" class="text-danger d-block"></span>
        <div id="reg_ProfileVideo_progress" class="progress mt-1 d-none" style="height: 6px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
        </div>
        <span asp-validation-for="ProfileVideo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/registration-upload.js" asp-append-version="true"></script>
    <script>
        toastr.options = { closeButton: true, progressBar: true, positionClass: 'toast-top-right', timeOut: 3000 };
    </script>
}
